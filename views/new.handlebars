<div class="container">
    <form action="/records" method="POST">

        <div class="row align-items-center h-100 mt-3">
            <div>*必填欄位</div>
            <div class="col-4"></div>
            <div>請輸入你的支出</div>
        </div>

        <div class="row align-items-center h-100 justify-content-between mt-3">
            <label for="name">名稱*:</label>
            <div class="col-11">
                <input type="text" name="name" class="form-control" id="name" required>
            </div>
        </div>

        <div class="row align-items-center h-100 justify-content-between mt-3">
            <label for="date">日期*:</label>
            <div class="col-11">
                <input type="date" class="form-control" id="date" name="date" value="{{date}}" placeholder="支出日期"
                    size="5">
            </div>
        </div>

        <div class="row align-items-center h-100 justify-content-between mt-3">
            <label for="category">類別*:</label>
            <div class="col-11">
                {{!-- <select class="form-control form-control-sm" style=" width:100%;" placeholder="類別"> --}}
                    <select class="custom-select" style=" width:100%;">
                        <option selected>類別</option>
                        <option>Small select</option>
                        <option>Small select</option>
                        <option>Small select</option>
                    </select>
            </div>
        </div>

        <div class="row align-items-center h-100 justify-content-between mt-3">
            <label for="amount">金額*:</label>
            <div class="col-11">
                <input type="text" class="form-control" id="amount" name="amount" value="{{date}}">
            </div>
        </div>

    </form>
</div>