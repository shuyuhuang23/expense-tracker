<div class="container">
    <form action="/records" method="POST">

        <div class="row align-items-center h-100 mt-3">
            <div>
                <span class="required">*</span>必填欄位
            </div>
            <div class="col-4"></div>
            <div><b>請輸入你的支出</b></div>
        </div>

        <div class="row align-items-center h-100 justify-content-between mt-3">
            <label for="name">名稱<span class="required">*</span>:</label>
            <div class="col-11">
                <input type="text" name="name" class="form-control" id="name" value="{{name}}" required>
            </div>
        </div>

        <div class="row align-items-center h-100 justify-content-between mt-3">
            <label for="date">日期<span class="required">*</span>:</label>
            <div class="col-11">
                <input type="date" class="form-control" id="date" name="date" value="{{date}}" placeholder="支出日期"
                    size="5">
            </div>
        </div>

        <div class="row align-items-center h-100 justify-content-between mt-3">
            <label for="category">類別<span class="required">*</span>:</label>
            <div class="col-11">
                {{!-- <select class="form-control form-control-sm" style=" width:100%;" placeholder="類別"> --}}
                    <select id="category" name="category" class="custom-select" style=" width:100%;">
                        <option selected>類別</option>
                        {{#each categories}}
                        <option>{{ this }}</option>
                        {{/each}}
                    </select>
            </div>
        </div>

        <div class="row align-items-center h-100 justify-content-between mt-3">
            <label for="amount">金額<span class="required">*</span>:</label>
            <div class="col-11">
                <input type="text" class="form-control" id="amount" name="amount" value="{{amount}}">
            </div>
        </div>

        <div class="row justify-content-center mt-3">
            {{!-- <a href="/records/{{ restaurant._id }}/edit"> --}}
                <button type="submit" class="btn btn-warning btn-sm m-1 btn-block">新增支出</button>
                {{!-- </a> --}}
        </div>

    </form>
</div>